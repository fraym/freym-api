{
    "name": "@fraym/react",
    "version": "0.36.0",
    "license": "MIT",
    "homepage": "https://github.com/fraym/freym-api",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fraym/freym-api.git"
    },
    "description": "Easily integrate Freym into your react app",
    "scripts": {
        "build": "rm -rf dist && tsc && npx swc . -d dist",
        "lint": "eslint && prettier --check \"**/*.{ts,tsx,json,scss,css}\"",
        "fix": "eslint --fix && prettier --write \"**/*.{ts,tsx,json,scss,css}\""
    },
    "files": [
        "dist/**/*"
    ],
    "exports": {
        "./*": {
            "types": "./dist/*.d.ts",
            "default": "./dist/*.js"
        },
        "./client/*": {
            "types": "./dist/client/*.d.ts",
            "default": "./dist/client/*.js"
        },
        "./hooks/*": {
            "types": "./dist/hooks/*.d.ts",
            "default": "./dist/hooks/*.js"
        }
    },
    "engines": {
        "node": ">=20"
    },
    "dependencies": {
        "@urql/exchange-auth": "^2.2.1",
        "@urql/exchange-request-policy": "^1.2.1",
        "@urql/exchange-retry": "^1.3.1",
        "@urql/core": "^5.1.1",
        "graphql-ws": "^6.0.5"
    },
    "devDependencies": {
        "react": "^19.1.0",
        "@types/react": "^19.1.5"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0"
    },
    "prettier": "@becklyn/prettier"
}
